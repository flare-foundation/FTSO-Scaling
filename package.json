{
  "name": "ftso-scaling",
  "private": true,
  "version": "1.0.0",
  "description": "FTSO data provider client and reward calculator",
  "license": "MIT",
  "engines": {
    "node": ">=22.0.0"
  },
  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"apps/**/*.ts\" \"libs/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "-----TESTS-----": "",
    "test": "NETWORK=local-test yarn mocha -r ts-node/register -t 0 --exit",
    "test:unit": "yarn test 'test/**/unit/**/*.test.ts'",
    "test:integration": "yarn test 'test/**/integration/**/*.test.ts'",
    "test:all": "yarn test 'test/**/*.test.ts'",
    "test:coverage": "nyc yarn test:all",
    "-----FORMATTING & LINTING-----": "",
    "format:check": "prettier --check \"{apps,libs,test}/**/*.ts\"",
    "format:fix": "prettier --write \"{apps,libs,test}/**/*.ts\"",
    "lint:check": "eslint \"{apps,libs,test}/**/*.ts\"",
    "lint:fix": "eslint \"{apps,libs,test}/**/*.ts\" --fix",
    "-----DEVELOP-SCRIPTS-----": "echo ONLY FOR DEVELOPMENT",
    "ftso-data-provider-provider-api-gen": "ts-node apps/ftso-data-provider/src/feed-value-provider-api/provider-generator.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/config": "^4.0.2",
    "@nestjs/core": "^11.1.3",
    "@nestjs/passport": "^10",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/typeorm": "^11.0.0",
    "@scure/base": "^1.2.1",
    "axios": "^1.6.5",
    "class-transformer": "^0.5.1",
    "ethers": "^6.6.0",
    "glob": "^11.0.2",
    "helmet": "^8.1.0",
    "lru-cache": "^11.1.0",
    "mysql2": "^3.6.5",
    "nest-commander": "^3.12.5",
    "passport": "^0.7.0",
    "passport-headerapikey": "^1.2.2",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1",
    "string-width": "7.2.0",
    "typeorm": "^0.3.17",
    "web3": "^4",
    "workerpool": "^9.1.0"
  },
  "devDependencies": {
    "@eslint/compat": "^2.0.0",
    "@flarenetwork/eslint-config-flare": "^0.0.1",
    "@flarenetwork/prettier-config-flare": "^0.0.2",
    "@istanbuljs/nyc-config-typescript": "^1.0.2",
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@sinonjs/fake-timers": "^14.0.0",
    "@swc/cli": "^0.7.7",
    "@swc/core": "^1.3.64",
    "@types/chai": "^4",
    "@types/chai-as-promised": "^7",
    "@types/express": "^5.0.3",
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.0.0",
    "@types/sinon": "^17.0.3",
    "@types/sinonjs__fake-timers": "^8.1.5",
    "@types/workerpool": "^9.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "axios-mock-adapter": "^2.1.0",
    "chai": "^4",
    "chai-as-promised": "7",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.4.1",
    "mocha": "^11.6.0",
    "nyc": "^17.1.0",
    "prando": "^6.0.1",
    "prettier": "^3.7.4",
    "sinon": "^20.0.0",
    "source-map-support": "^0.5.21",
    "sqlite3": "^5.1.7",
    "supertest": "^7.1.1",
    "swagger-typescript-api": "^13.0.3",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "resolutions": {
    "string-width": "4.2.3"
  },
  "nyc": {
    "extends": "@istanbuljs/nyc-config-typescript",
    "check-coverage": true,
    "all": true,
    "include": [
      "{apps,libs}/**/!(*.test|*.spec|*.dto).[tj]s?(x)"
    ],
    "exclude": [
      "apps/**/main.ts",
      "apps/**/*.module.ts",
      "apps/ftso-data-provider/src/feed-value-provider-api/**/*",
      "apps/**/configuration.ts",
      "libs/ftso-core/src/utils/error.ts",
      "libs/ftso-core/src/utils/voting-utils.ts"
    ],
    "reporter": [
      "html",
      "lcov",
      "text",
      "text-summary"
    ],
    "report-dir": "coverage"
  },
  "prettier": "@flarenetwork/prettier-config-flare"
}
